/*
 * gwyconfig.h
 *
 * This is a static Win32 version.
 */

#ifndef __GWY_CONFIG_H__
#define __GWY_CONFIG_H__

#define pow10(x) exp(G_LN10*(x))
/* hypot() is defined */
#define cbrt(x) pow((x), 1.0/3.0)
static inline double acosh(double x) { return log(x + sqrt(x*x - 1); }
static inline double asinh(double x) { return log(x + sqrt(x*x + 1); }
static inline double atanh(double x) { return log((1 + x)/(1 - x)); }

#endif /* __GWY_CONFIG_H__ */

